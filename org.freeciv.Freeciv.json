{
    "app-id": "org.freeciv.Freeciv",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.24",
    "sdk": "org.gnome.Sdk",
    "finish-args": [
        "--persist=.freeciv",
        "--share=ipc",
        "--socket=x11",
        "--share=network",
        "--socket=pulseaudio"
    ],
    "command": "freeciv-gtk2",
    "rename-appdata-file": "freeciv-gtk2.appdata.xml",
    "rename-desktop-file": "freeciv-gtk2.desktop",
    "rename-icon": "freeciv-client",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/aclocal",
        "/share/man",
        "*.la", "*.a"
    ],
    "modules": [
        "shared-modules/SDL/SDL-1.2.15.json",
        "shared-modules/smpeg/smpeg-0.4.5.json",
        "shared-modules/SDL/SDL_mixer-1.2.12.json",
        {
            "name": "freeciv",
            "config-opts": [
                "--enable-client=gtk2",
                "--without-freeciv-manual"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://download.gna.org/freeciv/stable/freeciv-2.5.6.tar.bz2",
                    "sha256": "cfadc23eec11a5a8ae74a7d3719eb126026137f0700da065367fd55cbab6999b"
                },
                {
                    "type": "patch",
                    "path": "freeciv-save-in-directory.patch"
                },
                {
                    "type": "patch",
                    "path": "freeciv-store-server-history-in-directory.patch"
                }
            ]
        }
    ]
}
